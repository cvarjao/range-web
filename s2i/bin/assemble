#!/bin/sh
set -e

echo "hello again!"


NODE_URI=https://nodejs.org/dist/v9.7.0/node-v9.7.0-linux-x64.tar.gz
PATH="${PATH}:/tmp/node/bin"

echo "Installing nodejs"
mkdir -p /tmp/node
cd /tmp/node
curl -L "${NODE_URI}" | tar -xvz --strip-components=1
/tmp/node/bin/node -v
mkdir -p /tmp/home
HOME=/tmp/home

export HOME

cd /tmp/src
npm i
npm i escape-string-regexp
npm -v
node -v
npm run build
npm test
